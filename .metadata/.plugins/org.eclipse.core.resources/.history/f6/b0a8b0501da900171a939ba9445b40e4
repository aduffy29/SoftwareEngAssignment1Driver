	        ECEModules.add(softwareEng);
	        ECEModules.add(SoC);
	        ECEModules.add(telecomms);
	        
	        BIOModules.add(bioDesign);
	        BIOModules.add(projManagement);
	        BIOModules.add(fyp);
	        
